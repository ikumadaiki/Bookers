<div class="success"><%= flash[:success]  %></dv>
<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' , class:"update-book"  %>
<% end %>
<div class="edit-item"><%= link_to "Show" , book_path(@book) %></div>
