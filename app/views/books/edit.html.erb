<%= flash[:success]  %>

<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>

  <% if @book.errors.any? %>
    <div class="error-explanation">
      <h2><%= @book.errors.count %> errors prohibitted this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    
  <% end %>
    
  <div class="field">
    <%= f.label:title,"Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label:body,"Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book' , class:"update-book"  %>
  </div>
<% end %>
<div class="edit-item"><%= link_to "Show" , book_path(@book) %></div>
|
<div class="edit-item"><%= link_to "Back" , books_path %></div>